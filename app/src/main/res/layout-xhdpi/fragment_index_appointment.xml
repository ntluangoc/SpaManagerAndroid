<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/rectangle_detail_product"
        android:layout_width="250dp"
        android:layout_height="60dp">
        <TextView
            android:id="@+id/txtNameAppointment"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="20dp"
            android:textSize="60px"
            android:textColor="#fff"
            android:fontFamily="@font/inconsolata_bold"
            android:text="Appointment 1"
            android:layout_width="150dp"
            android:layout_height="30dp"></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_baseline_access_time_filled_24"></ImageView>
            <TextView
                android:id="@+id/txtTimeAppointment"
                android:layout_marginLeft="5dp"
                android:textSize="50px"
                android:textColor="#fff"
                android:fontFamily="@font/inconsolata_regular"
                android:text="20:30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>

        <CheckBox
            android:id="@+id/checkAppointment"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="-49dp"
            android:button="@drawable/check_selector"
            app:buttonTint="#85F389"></CheckBox>
    </LinearLayout>
</LinearLayout>