<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/rectangle_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginTop="35px"
        android:layout_marginLeft="50px"
        android:background="@drawable/rectangle_detail_product"
        android:layout_width="100px"
        android:layout_height="85px">
        <ImageView
            android:id="@+id/imgReturnArrowDetail"
            android:layout_marginLeft="7dp"
            android:layout_gravity="center"
            android:src="@drawable/icon_arrow_left_line"
            android:layout_width="55px"
            android:layout_height="65px"></ImageView>
    </LinearLayout>
    <TextView
        android:layout_marginTop="15dp"
        android:layout_marginLeft="80px"
        android:fontFamily="@font/inconsolata_regular"
        android:textSize="50px"
        android:textColor="#fff"
        android:text="Your product detail ..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/rectangle_detail_product"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:layout_width="935px"
        android:layout_height="1660px">
        <androidx.cardview.widget.CardView
            app:cardBackgroundColor="#FFFFFF"
            android:layout_margin="3px"
            app:cardCornerRadius="20px"
            android:layout_width="935px"
            android:layout_height="895px">
            <ImageView
                android:id="@+id/imgProductDetail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ImageView>
        </androidx.cardview.widget.CardView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="235dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="235dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/icon_edit_line"
                        android:layout_width="80px"
                        android:layout_height="80px"></ImageView>
                    <TextView
                        android:id="@+id/txtNameProductDetail"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/inconsolata_regular"
                        android:text=""
                        android:textColor="#fff"
                        android:textSize="80px"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="3dp"
                        android:src="@drawable/icon_currency_dollar_2_line"
                        android:layout_width="80px"
                        android:layout_height="80px"></ImageView>
                    <TextView
                        android:id="@+id/txtPriceDetail"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/inconsolata_regular"
                        android:text=""
                        android:textColor="#fff"
                        android:textSize="70px"></TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/icon_skin_product"
                        android:layout_width="80px"
                        android:layout_height="80px"></ImageView>
                    <TextView
                        android:id="@+id/txtSkinProductDetail"
                        android:layout_width="270dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/inconsolata_regular"
                        android:text=""
                        android:textColor="#fff"
                        android:textSize="70px"></TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/ic_baseline_description_24"
                        android:layout_width="80px"
                        android:layout_height="80px"></ImageView>
                    <TextView
                        android:id="@+id/txtDescriptionDetail"
                        android:layout_width="250dp"

                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/inconsolata_regular"
                        android:text=""
                        android:textColor="#fff"
                        android:textSize="70px"></TextView>
                </LinearLayout>


            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="935px"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="-15dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnEditProduct"
            android:layout_width="320px"
            android:layout_height="105px"
            android:background="@drawable/rectangle_btn"
            android:drawableLeft="@drawable/ic_baseline_edit_24"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="Edit"
            android:textColor="#fff"
            app:backgroundTint="#00FFFFFF"
            app:backgroundTintMode="add"></Button>

        <Button
            android:id="@+id/btnDeleteProduct"
            android:layout_width="320px"
            android:layout_height="105px"
            android:layout_marginLeft="30dp"
            android:background="@drawable/rectangle_btn"
            android:drawableLeft="@drawable/ic_baseline_delete_24"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:text="Delete"
            android:textColor="#fff"
            app:backgroundTint="#00FFFFFF"
            app:backgroundTintMode="add"></Button>
    </LinearLayout>

</LinearLayout>