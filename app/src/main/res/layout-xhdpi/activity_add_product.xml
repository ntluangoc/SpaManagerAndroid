<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@drawable/rectangle_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginTop="35px"
        android:layout_marginLeft="50px"
        android:background="@drawable/rectangle_detail_product"
        android:layout_width="100px"
        android:layout_height="85px">
        <ImageView
            android:id="@+id/imgReturnArrowAdd"
            android:layout_marginLeft="7dp"
            android:layout_gravity="center"
            android:src="@drawable/icon_arrow_left_line"
            android:layout_width="55px"
            android:layout_height="65px"></ImageView>
    </LinearLayout>
    <TextView
        android:layout_marginTop="15dp"
        android:layout_marginLeft="80px"
        android:fontFamily="@font/inconsolata_regular"
        android:textSize="50px"
        android:textColor="#fff"
        android:text="Create your new product ..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>

        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/rectangle_detail_product"
            android:layout_marginTop="25dp"
            android:layout_gravity="center"
            android:layout_width="935px"
            android:layout_height="1660px">
            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="#00FFFFFF"
                android:layout_margin="3px"
                app:cardCornerRadius="20px"
                android:layout_width="935px"
                android:layout_height="895px">
                <ImageView
                    android:id="@+id/imgAddProduct"
                    android:src="@drawable/icon_upload_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></ImageView>
            </androidx.cardview.widget.CardView>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="700px">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginLeft="20dp"
                            android:text="Name:"
                            android:textSize="60px"
                            android:textColor="#fff"
                            android:fontFamily="@font/inconsolata_regular"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"></TextView>
                        <EditText
                            android:id="@+id/edtAddNameProduct"
                            android:paddingLeft="5dp"
                            android:drawableLeft="@drawable/ic_baseline_edit_24"
                            android:drawablePadding="2dp"
                            android:background="@drawable/rectangle_input"
                            android:layout_width="200dp"
                            android:layout_height="90px"
                            android:layout_marginLeft="5dp"
                            android:fontFamily="@font/inconsolata_regular"
                            android:textColor="#fff"
                            android:textColorHighlight="#fff"
                            android:textColorHint="#fff"
                            android:textSize="60px"></EditText>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="10dp"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginLeft="20dp"
                            android:text="Price:"
                            android:textSize="60px"
                            android:textColor="#fff"
                            android:fontFamily="@font/inconsolata_regular"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"></TextView>
                        <EditText
                            android:id="@+id/edtAddPrice"
                            android:paddingLeft="5dp"
                            android:drawableLeft="@drawable/ic_baseline_attach_money_24"
                            android:drawablePadding="2dp"
                            android:background="@drawable/rectangle_input"
                            android:layout_width="200dp"
                            android:layout_height="90px"
                            android:layout_marginLeft="5dp"
                            android:fontFamily="@font/inconsolata_regular"
                            android:textColor="#fff"
                            android:textColorHighlight="#fff"
                            android:textColorHint="#fff"
                            android:textSize="60px"></EditText>

                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginLeft="20dp"
                            android:text="Skin:"
                            android:textSize="60px"
                            android:textColor="#fff"
                            android:fontFamily="@font/inconsolata_regular"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"></TextView>
                        <Spinner
                            android:id="@+id/spnAddSkin"
                            android:layout_width="200dp"
                            android:layout_height="90px"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/rectangle_input"
                            android:dropDownWidth="match_parent">

                        </Spinner>

                        <ImageView
                            android:layout_gravity="center"
                            android:layout_marginLeft="-22dp"
                            android:src="@drawable/icon_arrow_down"
                            android:layout_width="45px"
                            android:layout_height="35px"></ImageView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginTop="-15dp"
                            android:layout_marginLeft="20dp"
                            android:text="Description:"
                            android:textSize="60px"
                            android:textColor="#fff"
                            android:fontFamily="@font/inconsolata_regular"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"></TextView>
                        <EditText
                            android:id="@+id/edtAddDescription"
                            android:drawableLeft="@drawable/ic_baseline_description_24"
                            android:paddingLeft="5dp"
                            android:drawablePadding="2dp"
                            android:background="@drawable/rectangle_input"
                            android:layout_marginLeft="5dp"
                            android:layout_width="200dp"
                            android:layout_height="190px"
                            android:fontFamily="@font/inconsolata_regular"
                            android:textColorHighlight="#fff"
                            android:textColor="#fff"
                            android:textSize="60px"></EditText>
                    </LinearLayout>

                </LinearLayout>


            </ScrollView>

        </LinearLayout>

    <Button
        android:id="@+id/btnSaveProduct"
        android:layout_width="320px"
        android:layout_height="105px"
        android:layout_gravity="center"
        android:layout_marginTop="-15dp"
        android:background="@drawable/rectangle_btn"
        android:text="save"
        android:textColor="#fff"
        app:backgroundTint="#00FFFFFF"
        app:backgroundTintMode="add"></Button>
</LinearLayout>