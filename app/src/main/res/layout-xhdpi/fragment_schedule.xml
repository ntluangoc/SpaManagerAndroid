<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAE2E2"
    android:orientation="vertical"
    android:padding="5dp">

    <com.applandeo.materialcalendarview.CalendarView
        android:id = "@+id/calenderView"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        app:abbreviationsBarColor="@color/btn_red_pink"
        app:abbreviationsLabelsColor="#FFFFFF"
        app:anotherMonthsDaysLabelsColor="#FB9494"
        app:daysLabelsColor="@color/white"
        app:eventsEnabled="true"
        app:headerColor="@color/btn_red_pink"
        app:headerLabelColor="#FFFFFF"
        app:pagesColor="#FABCC1"
        app:selectionColor="@color/btn_red_pink"
        app:todayLabelColor="#FD6776"
        app:type="one_day_picker"></com.applandeo.materialcalendarview.CalendarView>

    <ListView
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:clickable="true"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:id="@+id/gvListAppointment"
        android:layout_width="match_parent"
        android:layout_height="340dp"
        ></ListView>
    <Button
        android:id="@+id/btnAddAppointment"
        android:layout_width="170px"
        android:layout_height="170px"
        android:layout_gravity="bottom"
        android:layout_marginLeft="850px"
        android:layout_marginTop="-155dp"
        android:background="@drawable/icon_add_2"
        app:backgroundTint="#00FFFFFF"
        app:backgroundTintMode="add"></Button>
</LinearLayout>