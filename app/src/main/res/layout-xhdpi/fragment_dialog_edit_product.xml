<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/rectangle_dialog"
    android:layout_width="1080px"
    android:layout_height="1850px">

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/rectangle_detail_product"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:layout_width="935px"
        android:layout_height="1660px">
        <androidx.cardview.widget.CardView
            app:cardBackgroundColor="#FFFFFF"
            android:layout_margin="3px"
            app:cardCornerRadius="20px"
            android:layout_width="935px"
            android:layout_height="895px">
            <ImageView
                android:id="@+id/imgEditProduct"
                android:src="@drawable/spa_product1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ImageView>
        </androidx.cardview.widget.CardView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="700px">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:text="Name:"
                        android:textSize="60px"
                        android:textColor="#fff"
                        android:fontFamily="@font/inconsolata_regular"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"></TextView>
                    <EditText
                        android:id="@+id/edtEditNameProduct"
                        android:paddingLeft="5dp"
                        android:drawableLeft="@drawable/ic_baseline_edit_24"
                        android:drawablePadding="2dp"
                        android:background="@drawable/rectangle_input"
                        android:layout_width="200dp"
                        android:layout_height="90px"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/inconsolata_regular"
                        android:textColor="#fff"
                        android:textColorHighlight="#fff"
                        android:textColorHint="#fff"
                        android:textSize="60px"></EditText>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:text="Price:"
                        android:textSize="60px"
                        android:textColor="#fff"
                        android:fontFamily="@font/inconsolata_regular"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"></TextView>
                    <EditText
                        android:id="@+id/edtEditPrice"
                        android:paddingLeft="5dp"
                        android:drawableLeft="@drawable/ic_baseline_attach_money_24"
                        android:drawablePadding="2dp"
                        android:background="@drawable/rectangle_input"
                        android:layout_width="200dp"
                        android:layout_height="90px"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/inconsolata_regular"
                        android:textColor="#fff"
                        android:textColorHighlight="#fff"
                        android:textColorHint="#fff"
                        android:textSize="60px"></EditText>

                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:text="Skin:"
                        android:textSize="60px"
                        android:textColor="#fff"
                        android:fontFamily="@font/inconsolata_regular"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"></TextView>
                    <Spinner
                        android:id="@+id/spnEditSkin"
                        android:layout_width="200dp"
                        android:layout_height="90px"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/rectangle_input"
                        android:dropDownWidth="match_parent">

                    </Spinner>

                    <ImageView
                        android:layout_gravity="center"
                        android:layout_marginLeft="-22dp"
                        android:src="@drawable/icon_arrow_down"
                        android:layout_width="45px"
                        android:layout_height="35px"></ImageView>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="-15dp"
                        android:layout_marginLeft="20dp"
                        android:text="Description:"
                        android:textSize="60px"
                        android:textColor="#fff"
                        android:fontFamily="@font/inconsolata_regular"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"></TextView>
                    <EditText
                        android:id="@+id/edtEditDescription"
                        android:drawableLeft="@drawable/ic_baseline_description_24"
                        android:paddingLeft="5dp"
                        android:drawablePadding="2dp"
                        android:background="@drawable/rectangle_input"
                        android:layout_marginLeft="5dp"
                        android:layout_width="200dp"
                        android:layout_height="190px"
                        android:fontFamily="@font/inconsolata_regular"
                        android:textColorHighlight="#fff"
                        android:textColor="#fff"
                        android:textSize="60px"></EditText>
                </LinearLayout>

            </LinearLayout>


        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="935px"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="15dp"
        android:gravity="center"
        android:layout_marginTop="-15dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnEditDialogProduct"
            android:layout_width="320px"
            android:layout_height="105px"
            android:background="@drawable/rectangle_btn"
            android:drawableLeft="@drawable/ic_baseline_edit_24"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="Edit"
            android:textColor="#fff"
            app:backgroundTint="#00FFFFFF"
            app:backgroundTintMode="add"></Button>

        <Button
            android:id="@+id/btnCancelDialogProduct"
            android:layout_width="380px"
            android:layout_height="105px"
            android:layout_marginLeft="30dp"
            android:background="@drawable/rectangle_btn"
            android:drawableLeft="@drawable/ic_baseline_arrow_back_24"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:text="Cancel"
            android:textColor="#fff"
            app:backgroundTint="#00FFFFFF"
            app:backgroundTintMode="add"></Button>
    </LinearLayout>

</LinearLayout>