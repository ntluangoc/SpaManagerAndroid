<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rectangle_background"
    android:orientation="vertical"
    android:paddingLeft="5dp">

    <LinearLayout
        android:layout_width="100px"
        android:layout_height="85px"
        android:layout_marginLeft="50px"
        android:layout_marginTop="35px"
        android:background="@drawable/rectangle_detail_product">

        <ImageView
            android:id="@+id/imgReturnArrowEditSchedule"
            android:layout_width="55px"
            android:layout_height="65px"
            android:layout_gravity="center"
            android:layout_marginLeft="7dp"
            android:src="@drawable/icon_arrow_left_line"></ImageView>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80px"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/inconsolata_regular"
        android:text="Create your new appointment ..."
        android:textColor="#fff"
        android:textSize="50px"></TextView>

    <LinearLayout
        android:layout_width="935px"
        android:layout_height="425dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="@drawable/rectangle_detail_product"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300px"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/inconsolata_regular"
            android:text="Information"
            android:textColor="#fff"
            android:textSize="70px"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/inconsolata_regular"
                    android:text="Name:"
                    android:textColor="#fff"
                    android:textSize="60px"></TextView>

                <EditText
                    android:id="@+id/edtEditNameAppointment"
                    android:layout_width="200dp"
                    android:layout_height="90px"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/rectangle_input"
                    android:drawableLeft="@drawable/ic_baseline_edit_24"
                    android:drawablePadding="2dp"
                    android:fontFamily="@font/inconsolata_regular"
                    android:paddingLeft="5dp"
                    android:textColor="#fff"
                    android:textColorHighlight="#fff"
                    android:textColorHint="#fff"
                    android:textSize="60px"></EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90px"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="90px"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="-5dp"
                    android:fontFamily="@font/inconsolata_regular"
                    android:text="Time:"
                    android:textColor="#fff"
                    android:textSize="60px"></TextView>

                <TextView
                    android:id="@+id/txtEditTimeAppointment"
                    android:layout_width="170dp"
                    android:layout_height="90px"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="-3.5dp"
                    android:paddingLeft="5dp"
                    android:background="@drawable/rectangle_input"
                    android:fontFamily="@font/inconsolata_regular"
                    android:textColor="#fff"
                    android:textSize="60px"></TextView>

                <Button
                    android:id="@+id/btnEditTimeAppointment"
                    android:layout_width="90px"
                    android:layout_height="90px"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/ic_baseline_access_time_filled_24"
                    app:backgroundTint="#FFFFFF"></Button>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/inconsolata_regular"
                    android:text="Date:"
                    android:textColor="#fff"
                    android:textSize="60px"></TextView>

                <TextView
                    android:id="@+id/txtEditDateAppointment"
                    android:layout_width="170dp"
                    android:layout_height="90px"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="-3.5dp"
                    android:paddingLeft="5dp"
                    android:background="@drawable/rectangle_input"
                    android:fontFamily="@font/inconsolata_regular"
                    android:textColor="#fff"
                    android:textSize="60px"></TextView>

                <Button

                    android:id="@+id/btnEditDateAppointment"
                    android:layout_width="90px"
                    android:layout_height="90px"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/ic_baseline_date_range_24"
                    app:backgroundTint="#FFFFFF"></Button>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="-15dp"
                    android:fontFamily="@font/inconsolata_regular"
                    android:text="Note:"
                    android:textColor="#fff"
                    android:textSize="60px"></TextView>

                <EditText
                    android:id="@+id/edtEditNote"
                    android:layout_width="200dp"
                    android:layout_height="136dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/rectangle_input"
                    android:drawableLeft="@drawable/ic_baseline_description_24"
                    android:drawablePadding="2dp"
                    android:fontFamily="@font/inconsolata_regular"
                    android:paddingLeft="5dp"
                    android:textColor="#fff"
                    android:textColorHighlight="#fff"
                    android:textSize="60px"></EditText>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="935px"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="-15dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnEditAppointment"
            android:layout_width="320px"
            android:layout_height="105px"
            android:background="@drawable/rectangle_btn"
            android:drawableLeft="@drawable/ic_baseline_edit_24"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="Edit"
            android:textColor="#fff"
            app:backgroundTint="#00FFFFFF"
            app:backgroundTintMode="add"></Button>

        <Button
            android:id="@+id/btnDeleteAppointment"
            android:layout_width="320px"
            android:layout_height="105px"
            android:layout_marginLeft="30dp"
            android:background="@drawable/rectangle_btn"
            android:drawableLeft="@drawable/ic_baseline_delete_24"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:text="Delete"
            android:textColor="#fff"
            app:backgroundTint="#00FFFFFF"
            app:backgroundTintMode="add"></Button>
    </LinearLayout>

</LinearLayout>